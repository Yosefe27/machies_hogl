<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacilitatorNewGroupActivity">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8C3ED">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="245dp"
                android:layout_height="156dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/logo_white_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="New User Sign Up Details"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Please Fill In The Details Below"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="12dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="11dp"
                android:background="#F8C3ED"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="GROUP NAME:"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/first_name"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_edit_bg"
                        android:backgroundTint="@color/colorWhite"
                        android:clickable="false"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Group Name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="CONTACT PERSON FULL NAME:"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/last_name"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_edit_bg"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Contact Person Full Name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="POSITION:"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/position"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_edit_bg"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Position"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="CONTACT PERSON NRC:"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/nrc"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_edit_bg"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Contact Person NRC"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="CONTACT PERSON (OR GROUP) PHONE:"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/phone_number"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_edit_bg"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Contact Person (Or Group) Phone"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="CONTACT PERSON (OR GROUP) EMAIL:"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/email"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_edit_bg"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Contact Person (Or Group) Email"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="USERNAME:"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/user_name"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_edit_bg"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Username"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="PASSWORD:"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/user_password"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_edit_bg"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Create Password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                    <EditText
                        android:id="@+id/user_password2"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_edit_bg"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Confirm Password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                </LinearLayout>
            </ScrollView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:minHeight="60dp"
                app:cardBackgroundColor="@color/ThemePink"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/save_member_details"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/ThemePink"
                    android:gravity="center"
                    android:text="Submit Application"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>