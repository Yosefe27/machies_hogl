<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRAdius="5dp"
    android:background="#F2EEF7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member_img"
            android:layout_width="124dp"
            android:layout_height="181dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:padding="5dp"
            android:src="@drawable/ic_groups"
            app:civ_border_color="@color/grey"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="181dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/member_img"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:weightSum="0.4">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="bottom"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingStart="5dp"
                android:text="Group Name"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/group_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingStart="5dp"
                android:text="ID"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_fine_charged"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingStart="5dp"
                android:text="Fine Charged"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_fine_paid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingStart="5dp"
                android:text="Paid Fines"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fines_balance"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingStart="5dp"
                android:text="Fine Balance"
                android:textSize="16sp" />


        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
